<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/widget_cardcarousel_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:scrollbarStyle="outsideInset"
        android:fadeScrollbars="false"
        android:scrollbarSize="@dimen/widget_scrollbar_height"
        android:scrollbarThumbHorizontal="@drawable/widget_scrollbar_thumb"
        android:scrollbarTrackHorizontal="@drawable/widget_scrollbar_track"/>

</RelativeLayout>