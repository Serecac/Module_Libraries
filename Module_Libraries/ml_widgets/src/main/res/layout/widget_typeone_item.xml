<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_typeone_layout"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/widget_typeone_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/widget_typeone_layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/widget_typeone_item_paddinstart"
        android:paddingStart="@dimen/widget_typeone_item_paddinstart">

        <TextView
            android:id="@+id/widget_typeone_textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_typeone_layoutSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/widget_typeone_item_paddinstart"
        android:paddingStart="@dimen/widget_typeone_item_paddinstart">

        <TextView
            android:id="@+id/widget_typeone_textSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/darkgrey"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_typeone_layoutExtraInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/widget_typeone_item_paddinstart"
        android:paddingStart="@dimen/widget_typeone_item_paddinstart">

        <TextView
            android:id="@+id/widget_typeone_textExtraInfo_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/widget_typeone_textExtraInfo_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/widget_typeone_item_paddinstart"
            android:layout_marginLeft="@dimen/widget_typeone_item_paddinstart"
            android:textColor="@color/red"/>

    </LinearLayout>

</LinearLayout>